# ================================================================
# Copy this file to .env and adjust values as needed.
# ================================================================

# ---- Ollama ----
# Use host.docker.internal when running in Docker (works on Mac/Win/Linux with extra_hosts)
# Use localhost when running directly on host
OLLAMA_URL=http://host.docker.internal:11434

# ---- Database ----
# SQLite path (relative paths are relative to the backend working directory)
DATABASE_URL=sqlite:///./data/medqa.db

# ---- Redis ----
REDIS_URL=redis://redis:6379/0

# ---- File Storage ----
UPLOAD_DIR=/app/data/uploads
OUTPUT_DIR=/app/data/outputs
MAX_UPLOAD_SIZE_MB=50

# ---- Celery ----
CELERY_CONCURRENCY=2

# ---- CORS ----
# Comma-separated origins allowed to call the API
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

